{
  "name": "tsp-form",
  "version": "0.4.5",
  "type": "module",
  "description": "A unified Tailwind 4 variables compatible UI component library for my own projects.",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "sideEffects": [
    "*.css",
    "**/*.css"
  ],
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite --port 3003",
    "dev:webpack": "webpack serve --mode development --env APP_MODE=example --port 3003",
    "build": "vite build",
    "build:lib": "rm -rf dist && tsc && webpack --mode production --env APP_MODE=library",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "react",
    "component",
    "ui",
    "tailwind"
  ],
  "author": "Tsupol",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.28.3",
    "@tanstack/react-table": "^8.21.3",
    "@babel/preset-env": "^7.28.3",
    "@babel/preset-react": "^7.27.1",
    "@babel/preset-typescript": "^7.27.1",
    "@tailwindcss/postcss": "^4.1.13",
    "@tailwindcss/vite": "^4.1.18",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react-swc": "^4.2.2",
    "babel-loader": "^10.0.0",
    "clsx": "^2.1.1",
    "css-loader": "^7.1.2",
    "html-webpack-plugin": "^5.6.4",
    "lucide-react": "^0.544.0",
    "postcss": "^8.5.6",
    "postcss-loader": "^8.2.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-hook-form": "^7.62.0",
    "react-router-dom": "^7.9.1",
    "style-loader": "^4.0.0",
    "tailwindcss": "^4.1.13",
    "typescript": "^5.9.2",
    "vite": "^7.3.1",
    "webpack": "^5.101.3",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.2"
  },
  "peerDependencies": {
    "@tanstack/react-table": ">=8.0.0",
    "clsx": "^2.1.1",
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0",
    "react-hook-form": ">=7.0.0"
  },
  "dependencies": {
    "react-json-view-lite": "^2.4.2"
  },
  "peerDependenciesMeta": {
    "@tanstack/react-table": {
      "optional": true
    }
  }
}
